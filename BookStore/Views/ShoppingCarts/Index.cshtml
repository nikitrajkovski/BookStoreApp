@model Domain.DTO.ShoppingCartDto

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: ghostwhite">Your Shopping Cart</h1>

<table class="table table-light table-striped">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Book name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Books.Count(); i++)
        {
            var item = Model.Books[i];
            <tr>
                <td>@(i + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Book.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>               
                    <a asp-action="DeleteFromShoppingCart" asp-controller="ShoppingCarts" asp-route-id="@item.Book.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    <th><b>Total:</b></th>

    <th></th>
    <th></th>
    <th></th>

    <th><b>@Model.Price</b></th>

    </tfoot>
</table>