@using Domain.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<BookAppUser> SignInManager
@inject UserManager<BookAppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <img src="https://cdn-icons-png.flaticon.com/512/5007/5007528.png" alt="User image" style="width:70px; height:50px; padding-right:30px"/>
        </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">
                    <img src="https://cdn-icons-png.flaticon.com/512/8455/8455227.png" alt="Log out image" style="width:70px; height:50px; padding-right:30px"  />
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" style="color: ghostwhite" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link" style="color: ghostwhite" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
